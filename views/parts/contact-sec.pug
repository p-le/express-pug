section(id="contact" )
  div(class="container") 
    div(class="row")

      div(class="col s12")
        h2(class="wow bounceIn", data-wow-offset="50", data-wow-delay="0.3s") 
          | LIÊN HỆ 
          span UNIMEX AUTO

      div(class="col l6 s12 wow fadeInRight", data-wow-offset="50", data-wow-delay="0.6s")
        address 
          p(class="address-title") 
            h4 ĐỊA CHỈ
            h5 Công ty CP xuất nhập khẩu Unimex Nghệ An
          p
            i(class="fa fa-phone")
            | (84-38) 3844842/ 8603636
          p
            i(class="fa fa-envelope-o")
            | trade01@unimexna.com.vn
          p
            i(class="fa fa-envelope-o")
            | trade02@unimexna.com.vn
          p
            i(class="fa fa-map-marker")
            | 15 Quang Trung, TP Vinh , Nghệ An
      div(class="col l6 s12 wow fadeInLeft", data-wow-offset="50", data-wow-delay="0.9s")
        form(action="/contact", method="post" name="contact")
          div(class="input-field")
            label(for="fullname") TÊN BẠN
            input(name="fullname", type="text", class="form-control", id="fullname")      
          div(class="input-field")
            label(for="email") ĐỊA CHỈ EMAIL
            input(name="email", type="email", class="form-control", id="email")
          div(class="input-field")
            label(for="tel") ĐIỆN THOẠI
            input(name="tel", type="text", class="form-control", id="tel") 
          div(class="input-field")
            label(for="subject") TIÊU ĐỀ
            input(name="title", type="text", class="form-control", id="subject")
          div(class="input-field")
            label(for="text") NỘI DUNG
            textarea(name="text", rows="4", class="materialize-textarea", id="text")

          input(type="submit" class="waves-effect waves-light btn blue" value="GỬI") 